<template>
  <view class="item">
    <label class="ipt-name">{{iptName}}</label>
    <input value="{{iptVal}}" bindinput="iptData" id="{{iptId}}" type="{{iptType}}" class="ipt" data-engName="{{engName}}"></input>
  </view>
</template>
<script>
  import wepy from 'wepy'
  export default class extends wepy.component {
    data = {}
    props = {
      iptName: String,
      iptId: Number,
      engName: String,
      iptType: String,
      iptVal: {
        twoWay: true,
        type: String
      },
      twoWay: true
    }
    methods = {
      iptData(e) {
        this.$emit('sendInfoVal', e.detail.value, e.currentTarget.dataset.comIndex, e.currentTarget.dataset.engname)
      }
    }
  }
</script>
